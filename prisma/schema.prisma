// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  ADMIN
  BUYER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  STRIPE
  INVOICE
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(BUYER)
  language      String    @default("he")
  companyId     String?
  company       Company?  @relation(fields: [companyId], references: [id])
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id          String   @id @default(cuid())
  name        String
  nameEn      String?
  businessId  String?  // ח.פ / ע.מ
  vatNumber   String?
  address     String?
  city        String?
  postalCode  String?
  phone       String?
  email       String?
  tier        String   @default("retail") // retail, wholesale_a, wholesale_b, wholesale_c
  users       User[]
  orders      Order[]
  addresses   Address[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Address {
  id        String   @id @default(cuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  label     String   // Home, Office, Warehouse
  street    String
  city      String
  postalCode String?
  region    String?  // Center, North, South
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String    @id @default(cuid())
  slug        String    @unique
  nameEn      String
  nameHe      String
  descriptionEn String? @db.Text
  descriptionHe String? @db.Text
  image       String?
  parentId    String?
  parent      Category? @relation("CategoryToCategory", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryToCategory")
  products    Product[]
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id                String   @id @default(cuid())
  slug              String   @unique
  sku               String   @unique
  nameEn            String
  nameHe            String
  descriptionEn     String?  @db.Text
  descriptionHe     String?  @db.Text
  shortDescriptionEn String? @db.Text
  shortDescriptionHe String? @db.Text
  categoryId        String
  category          Category @relation(fields: [categoryId], references: [id])
  images            String[]
  price             Decimal  @db.Decimal(10, 2)
  compareAtPrice    Decimal? @db.Decimal(10, 2)
  cost              Decimal? @db.Decimal(10, 2)
  stock             Int      @default(0)
  trackInventory    Boolean  @default(true)
  minOrderQuantity  Int      @default(1)
  packMultiple      Int?     // e.g., 10, 20, 50
  weight            Decimal?  @db.Decimal(10, 2)
  material          String?  // Plastic, Nylon, Carton, Foam, Aluminum
  thickness         Int?     // microns
  sizeLength        Decimal? @db.Decimal(10, 2)
  sizeWidth         Decimal? @db.Decimal(10, 2)
  sizeHeight        Decimal? @db.Decimal(10, 2)
  color             String?
  usage             String?  // butcher, vegetable, freezer, microwave
  foodGrade         Boolean  @default(false)
  temperatureResistance String?
  unitsPerPack      Int?
  isActive          Boolean  @default(true)
  isFeatured        Boolean  @default(false)
  metaTitleEn       String?
  metaTitleHe       String?
  metaDescriptionEn String?  @db.Text
  metaDescriptionHe String?  @db.Text
  variants          ProductVariant[]
  orderItems        OrderItem[]
  pricingTiers      PricingTier[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  sku         String   @unique
  nameEn      String?
  nameHe      String?
  price       Decimal? @db.Decimal(10, 2)
  stock       Int      @default(0)
  attributes  Json?    // { size: "L", color: "Blue" }
  image       String?
  orderItems  OrderItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PricingTier {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  tier        String   // retail, wholesale_a, wholesale_b, wholesale_c
  minQuantity Int      @default(1)
  price       Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([productId, tier, minQuantity])
}

model Order {
  id              String        @id @default(cuid())
  orderNumber     String        @unique
  companyId       String
  company         Company       @relation(fields: [companyId], references: [id])
  status          OrderStatus   @default(PENDING)
  subtotal        Decimal       @db.Decimal(10, 2)
  vatRate         Decimal       @default(17) @db.Decimal(5, 2)
  vatAmount       Decimal       @db.Decimal(10, 2)
  shipping        Decimal       @db.Decimal(10, 2)
  discount        Decimal       @default(0) @db.Decimal(10, 2)
  total           Decimal       @db.Decimal(10, 2)
  currency        String        @default("ILS")
  paymentMethod   PaymentMethod @default(INVOICE)
  paymentStatus   PaymentStatus @default(PENDING)
  shippingAddress Json
  billingAddress  Json
  notes           String?       @db.Text
  items           OrderItem[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  variantId   String?
  variant     ProductVariant? @relation(fields: [variantId], references: [id])
  quantity    Int
  unitPrice   Decimal  @db.Decimal(10, 2)
  total       Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
}

model Coupon {
  id          String   @id @default(cuid())
  code        String   @unique
  descriptionEn String? @db.Text
  descriptionHe String? @db.Text
  discountType String  // percentage, fixed
  discountValue Decimal @db.Decimal(10, 2)
  minOrderAmount Decimal? @db.Decimal(10, 2)
  maxUses     Int?
  usedCount   Int      @default(0)
  validFrom   DateTime
  validUntil  DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

